@model DevWorksCapstone.Models.Message
@*For Developers*@
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Contact Employer</h1>

<h4>Messages</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Contact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="width: 100%;height: 50%;">
                <label asp-for="MessageToSend" class="control-label"></label>
                <input type="text" asp-for="MessageToSend" class="form-control" />
                <span asp-validation-for="MessageToSend" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EmployerId" />
            <input type="hidden" asp-for="DeveloperId" />
            <input type="hidden" asp-for="DeveloperName" />
            <input type="hidden" asp-for="EmployerName" />


            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
