@model IEnumerable<DevWorksCapstone.Models.Message>
@*For Developers*@
@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Messages</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MessageToSend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer)
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Developer)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageToSend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployerName)
            </td>
            <td>
              @*  @Html.DisplayFor(modelItem => item.DeveloperName)*@
            </td>
            <td>
                <a asp-action="Contact" asp-route-id="@item.EmployerId">Contact</a>
            </td>
        </tr>
}
    </tbody>
</table>
