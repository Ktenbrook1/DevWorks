            </div>
            <div class="container my-3">
                Their Abilities:
                @using (Html.BeginForm("Index", "Home"))
                {
                    
                        <div>
                            <label>
                                <dt class="col-sm-8">
                                    @Html.DisplayFor(model => model.SelectedAbilities)
                                </dt>
                            </label>
                        </div>
                    
