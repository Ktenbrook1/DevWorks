@model DevWorksCapstone.Models.Developer

@{
    ViewData["Title"] = "Hire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Developer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            Profile Picture:
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/"+Model.ImageName)" asp-append-version="true" height="250px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GitHubLink)
        </dt>
        <dd class="col-sm-10">
            <a class="anchor" href="@Html.DisplayFor(modelItem => Model.GitHubLink)" target="_blank">Open</a>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatePerHr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatePerHr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsInContract)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsInContract)
        </dd>
    </dl>
</div>
        <form asp-action="Hire">
            <div class="form-group">
                <input type="hidden" asp-for="UserName" />
                <input type="hidden" asp-for="GitHubLink" />
                <input type="hidden" asp-for="IdentityUserId" />
                <input type="hidden" asp-for="ProfileImgURL" />
                <input type="hidden" asp-for="Bio" />
                <input type="hidden" asp-for="RatePerHr" />
                <input type="hidden" asp-for="IsInContract" />
                <input type="hidden" asp-for="DeveloperId" />
                <input type="hidden" asp-for="Email" />

                <label>Which Listing are you hiring this developer for?</label>
                <select asp-for="MyLisitng" class="form-control" asp-items="@Model.ListingsForEmp"></select>
                <span asp-validation-for="ListingsForEmp" class="text-danger"></span>
            </div>
            <div class="container my-3">
                <h5>Their Abilities:</h5>

                @using (Html.BeginForm("Index", "Home"))
                {

                    <div>
                        <label>
                            <dt class="col-sm-8">
                                @Html.DisplayFor(model => model.arrayOfStringAbilities)
                            </dt>
                        </label>
                    </div>

                }
                <div class="form-group text-center" style="margin-bottom: 1rem">
                    <input type="submit" class="btn btn-primary" style="float:left; margin: 20px 0 20px 0; " value="Hire" />
                </div>
            
            </div>          
        </form>
